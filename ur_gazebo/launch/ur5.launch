<?xml version="1.0"?>
<launch>
	
  <!-- if true, a description of the robot with limited joint range will be used for better planning -->
  <arg name="joint_limited" default="false" />

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch" />

  <!-- send frida urdf to param server -->
  <include file="$(find ur_description)/launch/ur5_upload.launch" unless="$(arg joint_limited)" />
  <include file="$(find ur_description)/launch/ur5_joint_limited_upload.launch" if="$(arg joint_limited)" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -z 0.1" respawn="false" output="screen" />

  <!-- Controller Manager -->
<!--   <include file="$(find controller_manager)/controller_manager.launch" /> -->

  <!-- Fake Calibration -->
  <node pkg="rostopic" type="rostopic" name="fake_joint_calibration" args="pub /calibrated std_msgs/Bool true" />

  <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur5.yaml" command="load"/>

  <node name="arm_controller_spawner" pkg="controller_manager" type="spawner" respawn="false" args="arm_controller" />
	
  <group ns="arm_controller">
	<node name="arm_joint_trajectory_action_node" pkg="industrial_robot_client" type="joint_trajectory_action" />
  </group>

</launch>
